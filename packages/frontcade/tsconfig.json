{
  "compilerOptions": {
    "jsx": "preserve",
    "strict": false,
    "target": "es2015",
    "module": "esnext",
    "noEmit": true,
    "allowJs": true,
    "incremental": true,
    "skipLibCheck": true,
    "esModuleInterop": false,
    "isolatedModules": true,
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "forceConsistentCasingInFileNames": true,
    "baseUrl": ".",
    "lib": ["dom", "dom.iterable", "esnext"],
    "plugins": [{ "name": "next" }]
  },
  "include": [
    "**/*.ts",
    "**/*.tsx",
    "types.d.ts",
    "next-env.d.ts",
    ".storybook/**/*.ts",
    ".storybook/**/*.tsx",
    ".next/types/**/*.ts"
  ],
  "exclude": ["node_modules", "frontend/scripts/templates", "app", "dist", "frontend", "frontend/src/game/*"]
}
